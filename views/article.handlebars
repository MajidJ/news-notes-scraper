<main>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                {{#each dbArticle}}
                <div class="card-header">
                    <a href="{{link}}" target="_blank"><h3>{{title}}</h3></a>
                </div>
                <div class="card-body" id="listedArticles">
                    <h3><strong>Aricle Summary:</strong></h3>
                    <p>{{summary}}</p>
                    {{!-- {{#if notes}} --}}
                    <div id="listedNotes">
                        <h3><strong>Notes:</strong></h3>
                        {{#each notes}}
                        <div class="card mb-3">
                            <div class="card-header">
                                <h4>{{this.title}}</h4>
                            </div>
                            <div class="card-body">
                                <p>"{{this.body}}"</p>
                                <button value="{{this._id}}" type="button" class="btn btn-warning deleteNote">Delete</button>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{!-- {{/if}} --}}
                    <form class="form-control">
                        <label for="noteTitle">Title:</label>
                        <input type="text" id="noteTitle" class="form-control">
                        <label for="noteBody">Note:</label>
                        <textarea type="text" id="noteBody" class="form-control"></textarea>
                        <button value="{{_id}}" type="button" class="my-2 btn btn-primary submit">Submit</button>
                    </form>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>
<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Confirm Article Deletion</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this article?</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary">Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
</div>