<main>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">The news</div>
                <div class="card-body" id="listedArticles">
                    {{#each dbArticle}}
                    <div class="card">
                        <div class="card-body">
                            <a href="{{link}}" target="_blank">{{title}}</a>
                            <p>{{summary}}</p>
                            <form class="form-control">
                                <label for="noteBody">Add a note:</label>
                                <textarea type="text" id="noteBody" class="form-control"></textarea>
                                <button value="{{_id}}" type="button" class="btn btn-primary submit">Submit</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>